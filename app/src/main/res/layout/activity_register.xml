<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_image_signup"
    tools:context=".Register">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="130dp"
        android:text="Welcome"
        android:letterSpacing="0.04"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:letterSpacing="0.04"
        android:layout_marginTop="10dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="20dp"
        android:columnCount="2"
        android:padding="15dp"
        android:rowCount="2">


        <EditText
            android:id="@+id/signup_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:background="@drawable/round_border"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />


        <EditText
            android:id="@+id/signup_pass_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_email_id"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_border"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="15dp" />


        <EditText
            android:id="@+id/signup_repass_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_pass_id"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_border"
            android:hint="Enter Your Password again"
            android:inputType="textPassword"
            android:padding="15dp" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="7dp"
        android:background="@drawable/round_bg"
        android:onClick="register"
        android:padding="15dp"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="85dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have Account??? Click Here"
        android:onClick="login"
        android:layout_gravity="center"/>
</LinearLayout>